<div class="post-form-cont">
  <h1>Create a Post </h1>
  <%= form_with model: Post, url: user_posts_path, class:"post-form", method: :post do |form| %>
      <%= form.hidden_field :comments_counter, value:0 %>
      <%= form.hidden_field :likes_counter, value:0 %>
      <%= form.label :title,"Title", class:'label' %>
      <%= form.text_field :title, placeholder: 'Title of the post...', class:"title-input" %>
      <%= form.label :text, "Content", class:'label' %>
      <%= form.text_area :text, placeholder: 'Write your post...', class:"text-input" %>
      <%= form.submit "Submit Post", class:"submit-btn", id:"post-btn" %>
  <% end %>
</div>