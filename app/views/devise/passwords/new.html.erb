<div class="post-form-cont">
<h1>Forgot your password?</h1>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), class:"post-form", html: { method: :post, data: {turbo: false}}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.label :email , class:'label'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"title-input"%><br/><br/>

    <%= f.submit "Send me reset password instructions" , class:"submit-btn", id:"post-btn"%>
<% end %>
<%= render "devise/shared/links" %>
</div>