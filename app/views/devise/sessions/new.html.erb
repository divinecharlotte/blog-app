<div class="post-form-cont">
<h1>Log in</h1>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"post-form", data: {turbo: false}) do |f| %>
    <%= f.label :email , class:'label'%>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" ,class:"title-input"%>
    <%= f.label :password , class:'label'%>
    <%= f.password_field :password, autocomplete: "current-password" ,class:"title-input"%><br /><br />

  <% if devise_mapping.rememberable? %>
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %><br /><br />
  <% end %>
 <%= f.submit "Log in" , class:"submit-btn", id:"post-btn"%>
<% end %>
<%= render "devise/shared/links" %>
  </div>